<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name , class:"form-control", placeholder:"John" %>
  </div>

  <div class="field form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name ,class:"form-control" , placeholder:"Smith" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email ,class:"form-control" , placeholder:"email@email.com"  %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone ,class:"form-control" , placeholder:"111-111-1111" %>
  </div>

  <div class="field form-group">
    <%= form.label :twitter %>
    <%= form.text_field :twitter,class:"form-control" , placeholder:"@twitterhandle" %>
  </div>

  <div class="field form-group">
    <%= form.label :User_Id %>
    <%= form.number_field :user_id, id: :friend_user_id,class:"form-control" , value:current_user.id, type: :hidden %>
  </div>


  <div class="actions">
    <%= form.submit class:"btn btn-dark"%>
  </div>
<% end %>
